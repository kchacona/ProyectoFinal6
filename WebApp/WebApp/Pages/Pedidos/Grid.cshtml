@page
@model WebApp.Pages.Pedidos.GridModel
@{ }
<div class="container-fluid">

    <div class="card">
        <div class="card-header">
            Tipo Inquilino
        </div>
        <div class="card-body">
            <a class="btn btn-outline-primary" asp-page="Edit">
                <i class='bx bx-add-to-queue'></i>
            </a>
            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-bordered table table-striped table table-hover">
                        <thead>
                            <tr>
                                <th>Codigo</th>
                                <th>Cliente</th>
                                <th>Fecha de Pedido</th>
                                <th>Producto</th>
                                <th>Cantidad</th>
                                <th>Subtotal</th>
                                <th>Envio</th>
                                <th>Impuesto</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tboby>
                            @foreach (var item in Model.GridList)
                            {
                <tr>
                    <td>@item.Codigo</td>
                    <td>@item.Cliente</td>
                    <td>@item.FechaPedido</td>
                    <td>@item.Producto</td>
                    <td>@item.Cantidad</td>
                    <td>@item.Subtotal</td>
                    <td>@item.Envio</td>
                    <td>@item.Impuestos</td>
                    <td>@item.Total</td>
                    <td>
                        <a class="btn btn-primary" asp-page="Edit" asp-route-id="@item.Codigo"><i class='bx bx-edit-alt'></i></a>
                        <a class="btn btn-danger" asp-page-handler="Eliminar" asp-route-id="@item.Codigo"><i class='bx bx-trash'></i></a>
                    </td>
                </tr>}
                        </tboby>
                    </table>

                </div>
            </div>



        </div>
    </div>
    @Html.Raw(Model.Mensaje)
</div>
@section Scripts{

    <script>
        $(document).ready(function () {
            var mens = document.getElementById("mens").value;
            console.log(mens);
            if (mens != "") {
                Swal.fire({
                    position: 'top-end',
                    icon: 'success',
                    title: mens,
                    showConfirmButton: false,
                    timer: 1500
                });
            }
            $('#GridView').DataTable();
            
            
            
        });
    </script>

    <script defer src="~/App/Pedidos/Grid.js"></script>

}
